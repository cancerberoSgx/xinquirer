{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": [
      "es2018",
      "dom"
    ],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "preserveConstEnums": true
  },
  "include": [
    "src",
    "examples"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}